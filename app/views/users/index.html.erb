
<% if user_signed_in? %>
<%= react_router 'MyRoutes', 'HashLocation', { foo: 'Foo' }, { prerender_location: @location_path } %>
<% else %>
<div class="error">
  <% if @user&&@user.errors.any? %>
    <div class="align-center">
      <ul>
        <% @user.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
</div>
<div class="flex-row-sing">
  <div class="">
    <h1 class="align-center">Sign in</h1>
    <%= form_for(:session, url: sessions_path, id: "new-form") do |f| %>
      <p><%= f.label :email %></br>
      <%= f.text_field :email, class: ' ', id: 'email'%></p>
      <p><%= f.label :password %></br>
      <%= f.password_field :password, class: ' ', id: 'password'%></p>
      <p><%= f.label :remember_me, class: "checkbox inline" do %>
      <% end %>
      <p class="align-center">
        <%= f.submit "Log in", class: " ", id: 'login'%>
      </p>
    <% end %>
  </div>
  <div class="">
  <h1 class="align-center">Sign Up</h1>
    <div class="">
    <%= form_for User.new do |f|%>
      <p>
        <%= f.label :name %></br>
        <%= f.text_field :name ,class: "", size:"30",id: "name" %>
      </p>
       <%= f.label :avatar %></br>
       <%= f.file_field :avatar %>
      <p>
        <%= f.label :email %></br>
        <%= f.text_field  :email, class: "",size:"30", id: "email"%>
      </p>
      <p>
        <%= f.label :password %></br>
        <%= f.password_field :password, class: "",size:"30", id: "password"%>
      </p>
      <p>
        <%= f.label :password_confirmation %></br>
        <%= f.password_field :password_confirmation, class: "",size:"30", id: "password_confirmation"%>
      </p>

       <p class="align-center">
        <%= f.submit "Sign Up", class: " ", id: "Sign Up" %>
        </p>
    <% end %>
    </div>
  </div>
</div>
<%end %>
